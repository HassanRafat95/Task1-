<odoo><template id="signup_fields" inherit_id="auth_signup.fields" name="Auth Signup Ext form fields">
    <xpath expr="//div[2]" position="after">

        <div class="form-group field-country">

            <label class="control-label" for="country_id">Country</label>

            <select name="country_id" id="country_id" class="form-control">

                <option value="">Country...</option>

                <t t-foreach="countries or []" t-as="country">

                    <option t-att-value="country.id" ><t t-esc="country.name"/></option>

                </t>

            </select>

        </div>

        <div class="form-group field-city">
            <label for="city">City</label>
            <input type="text" name="city" id="city" class="form-control form-control-sm"/>
        </div>


    </xpath>
</template>
</odoo>
